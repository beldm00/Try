<Window x:Class="TryGame.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryGame"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100">Попробуй выбери правильный ответ:</TextBlock>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,150,-100" Click="Button_Click">
            <Label>1</Label>
        </Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-100" Click="Button_Click_1">
            <Label>2</Label>
        </Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,-150,-100" Click="Button_Click_3">
            <Label>3</Label>
        </Button>
        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Button_Click_2">
            <Label>Вернуться назад</Label>
        </Button>
    </Grid>
</Window>
