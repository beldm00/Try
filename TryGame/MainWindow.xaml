<Window x:Class="TryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*">
            </RowDefinition>
            <RowDefinition Height="1*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">

            <Viewport3D x:Name="MyViewport3D"/>


        </Grid>


        <Grid Grid.Row="1">
            <Button x:Name="PlayButton" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,50" Command="{Binding PlayButton}">
            <Label>Играть</Label>
        </Button>
            <Button x:Name="Statistika"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,-50" Command="{Binding Statistik}">
            <Label>Статистика</Label>
        </Button>
        </Grid>
    </Grid>
</Window>
